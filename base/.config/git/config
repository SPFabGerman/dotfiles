[alias]
    graph = log --oneline --graph --decorate
    purr = pull --rebase
    sub = restore --staged
    difft = -c diff.external=difft diff
    quicksave = !git add --update && git commit -m \"Update $(git diff --staged --name-only | paste -sd ',')\"
[core]
    editor = nvim
[init]
    defaultBranch = main
[pull]
    ff = only
[push]
    autoSetupRemote = true
[gpg]
    format = ssh
[user]
    signingkey = /home/fabian/.ssh/id_rsa.pub
